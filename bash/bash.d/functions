# ps with a grep {{{
# from http://hiltmon.com/blog/2013/07/30/quick-process-search/
function psax() {
  ps auxwwwh | grep "$@" | grep -v grep
}

function psg() {
  ps -ef | grep -i "$@" | grep -v grep
}

function psgrep() {
  f=${1:0:1}
  e=${1:1}
  ps auxww | grep "[$f]$e"
}

