alias ll="ls -lhF ${colorflag}"
alias lsd='ls -ld */'
alias lh='ls -a | egrep "^\."'
alias ls="ls ${colorflag}"
alias l.="ls -ld .?*"

alias sym="ls -la | grep '\->'"

alias latr="ls -latr"

# }}}
